<%= form_with model: @pizza do |form| %>
    <div class="form-group">
        <%= form.label :name, "Pizza Name" %>
        <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Toppings</label>
        <div class="toppings-list">
            <% @toppings.each do |topping| %>
                <label class="topping-item">
                    <%= check_box_tag 'pizza[toppings_list][]', topping.name, @pizza.toppings_list.include?(topping.name) %>
                    <%= topping.name %>
                </label>
            <% end %>
        </div>
    </div>

    <% if @pizza.errors.any? %>
        <div class="error-messages">
            <ul>
                <% @pizza.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-actions">
        <%= form.submit "Update Pizza", class: "btn btn-primary" %>
    </div>
<% end %>